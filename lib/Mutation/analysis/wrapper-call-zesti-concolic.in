#!/bin/bash

set -u

# TODO: path to 'tee' is hard-coded to avoid problems with binutils

# This script is invoked by the test suite. Don't rely on the wd.
#TOOL_DIR="IN_TOOL_DIR"
#TOOL_NAME="IN_TOOL_NAME"
maxTime=${SEMU_MAX_TIME:-TOTAL_MAX_TIME_}
solvermaxtime=${SEMU_MAX_SOLVER_TIME:-SOLVER_MAX_TIME_}
semuout="semu.out"

stdindata="IN_TOOL_DIR/klee-last/stdin-ktest-data"
tmpstdindata="IN_TOOL_DIR/stdin-ktest-data"

# Concolic
if [ -t 0 ] # check if stdin do not exist 
then
    (ZESTI_KLEE_EXECUTABLE_DIRNAME/klee -allow-external-sym-calls --posix-runtime --libc=uclibc --max-time=$maxTime --watchdog=true --max-solver-time=$solvermaxtime --search=bfs -shadow -shadow-replay-standalone -zest -only-output-states-covering-new -dont-simplify -write-pcs "IN_TOOL_DIR/IN_TOOL_NAME.bc" "${@:1}" ; EXIT_CODE=$? | /usr/bin/tee $semuout 2>&1)
    touch $tmpstdindata
else
/usr/bin/tee >(ZESTI_KLEE_EXECUTABLE_DIRNAME/klee -allow-external-sym-calls --posix-runtime --libc=uclibc --max-time=$maxTime --watchdog=true --max-solver-time=$solvermaxtime --search=bfs -shadow -shadow-replay-standalone -zest -only-output-states-covering-new -dont-simplify -write-pcs "IN_TOOL_DIR/IN_TOOL_NAME.bc" "${@:1}" ; EXIT_CODE=$? | /usr/bin/tee $semuout 2>&1) >(cat - > $tmpstdindata || EXIT_CODE=1) 
fi

# Symbolic

# wait for zesti to finish (when tee is used for input dispatchment)
sleep 1 # XXX removing this makes exit with 256, why(FIXME)

# after  zesti finished and updated klee-last
mv $tmpstdindata $stdindata || EXIT_CODE=2 


# Provoke "unbound variable" if KLEE fails
# Preserve the KLEE exit code
exit $EXIT_CODE
